<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
	<id>alert-rule</id>
	<formats>
		<format>war</format>
<!--		<format>dir</format>-->
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>./</outputDirectory>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>src/main/script</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>755</fileMode>
			<directoryMode>755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>logs</directory>
			<outputDirectory>logs</outputDirectory>
			<excludes>
				<exclude>*</exclude>
			</excludes>
			<fileMode>644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>file</directory>
			<outputDirectory>file</outputDirectory>
			<includes>
				<include>avatar</include>
				<include>knowledge</include>
				<include>order</include>
			</includes>
			<fileMode>644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>docs</directory>
			<outputDirectory>docs</outputDirectory>
			<fileMode>644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>conf/msg</directory>
			<outputDirectory>docs/msg</outputDirectory>
			<fileMode>644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>conf</directory>
			<outputDirectory>conf</outputDirectory>
			<fileMode>644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>../dosm-notify-service/conf</directory>
			<outputDirectory>conf</outputDirectory>
			<fileMode>644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
		<fileSet>
			<directory>plugins</directory>
			<outputDirectory>plugins</outputDirectory>
			<fileMode>644</fileMode>
			<directoryMode>0755</directoryMode>
		</fileSet>
	</fileSets>
<!--	<fileSet>-->
<!--		<directory>../dosm-dao/plugins</directory>-->
<!--		<outputDirectory>plugins</outputDirectory>-->
<!--		<fileMode>644</fileMode>-->
<!--		<directoryMode>0755</directoryMode>-->
<!--	</fileSet>-->
	<files>
		<file>
			<source>target/${project.build.finalName}.jar</source>
			<outputDirectory>./lib</outputDirectory>
			<destName>${project.build.finalName}-${git.commit.time}-${git.commit.id.abbrev}.jar</destName>
		</file>
	</files>
	<dependencySets>
		<dependencySet>
			<!--是否把本项目添加到依赖文件夹下-->
			<useProjectArtifact>true</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<!--将scope为runtime的依赖包打包-->
			<scope>runtime</scope>
			<excludes>
				<exclude>${groupId}:${artifactId}</exclude>
			</excludes>
		</dependencySet>
	</dependencySets>
</assembly>